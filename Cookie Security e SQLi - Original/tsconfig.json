{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "lib": ["ES6"],
      "strict": false,
      "esModuleInterop": true,
      "baseUrl": "./",
      "experimentalDecorators": true,
      "sourceMap": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  }